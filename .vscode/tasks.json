{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_incremental",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "args": [
                "--incremental"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "serve",
            "type" : "shell",
            "command" : "bundle exec jekyll serve"
        }
    ]
}